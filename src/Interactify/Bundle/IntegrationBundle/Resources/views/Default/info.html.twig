<form action="#" class="form-horizontal">
    <div class="col-md-12">
        <div class="form-group">
            <label for="uphn">Primary</label>
            <input type="text" value="{{ primary_phone }}" class="form-control"></div>
        </div> 
        <div class="col-md-6">
            <div class="form-group">
                <label for="alt1">Alternative 1</label> 
                <input type="text" value="{{ alt1_phone }}" class="form-control">
            </div>
        </div> 
        <div class="col-md-6">
            <div class="form-group">
                <label for="alt2">Alternative 2</label> 
                <input type="text" value="{{ alt2_phone }}" class="form-control">
            </div>
        </div> 
        <div class="col-md-6">
            <div class="form-group">
                <label for="fname">First Name</label> 
                <input type="text" value="{{ contact.getFirstname() }}" class="form-control">
            </div>
        </div> 
        <div class="col-md-6">
            <div class="form-group">
                <label for="lname">Last Name</label> 
                <input type="text" value="{{ contact.getLastname() }}" class="form-control">
            </div>
        </div> 
        <div class="col-md-12">
            <div class="form-group">
                <label for="cpname">Company Name</label> 
                <input type="text" value="{{ company }}" class="form-control">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="uemail">Email Address</label> 
                <input type="text" value="{{ primary_email }}" class="form-control">
            </div>
        </div> 
        <div class="col-md-6">
            <div class="form-group">
                <label for="uemailalt">Alt. Email</label> 
                <input type="text" value="{{ secondary_email }}" class="form-control">
            </div>
        </div> 
        <div class="col-md-12">
            <div class="form-group">
                <label for="uaddress">Address</label> 
                <input type="text" value="{{ primary_address.getStreet() }}" class="form-control">
            </div>
        </div> 
        <div class="col-md-6">
            <div class="form-group">
                <label for="ucity">City</label> 
                <input type="text" value="{{ primary_address.getCity() }}" class="form-control">
            </div>
        </div> 
        <div class="col-md-3">
            <div class="form-group">
                <label for="ustate">State</label> 
                <input type="text" value="{{ primary_address.getRegionText() }}" class="form-control">
            </div>
        </div> 
        <div class="col-md-3">
            <div class="form-group">
                <label for="uzip">Zip</label> 
                <input type="text" value="{{ primary_address.getPostalCode() }}" class="form-control">
            </div>
        </div>
</form>

